<section class="checkout">

   <h1 class="title">order summary</h1>

   <form >
      <div class="cart-items">
        <h3>cart items</h3>

          <% @order_items.each do |product| %>

            <p><span class="name"><%= product.item.name%>
                    0<%=product.quantity %></span>
              <span class="price"><%= product.total %>$</span></p>
      <% end%>
        <p class="grand-total"><span class="name">grand total :</span>
          <span class="price"><%= current_order.subtotal %>$</span></p>
        <a href="<%= cart_path %>" class="btn">view cart</a>
      </div>

</section>

<%= render 'items/footer' %>
