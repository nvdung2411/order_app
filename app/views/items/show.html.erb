<div class="row">
  <div class="col-md-8">
    <div class="item-info">
      <img src="/<%= @item.item_img_file_name%>">
      <h3 class="item-name">Name: <%= @item.name %></h3>
      <p class="item-desc">Description: <%= @item.description %></p>
      <h4 class="item-price"><span>price: </span> <%= @item.price %>$</h4>
    </div>
  </div>
</div>
<div class="row">
  <% if user_signed_in? && current_user.admin %>
    <div class="links btn-group">
      <%= link_to "Back", root_path, class: "btn btn-custom" %>
      <%= link_to "Edit", edit_admin_item_path(@item), class: "btn btn-custom" %>
      <% unless OrderItem.exists?(item_id: @item) %>
        <%= link_to "Delete", admin_item_path(@item), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-custom" %>
      <% end %>
    </div>
  <% end %>
</div>
