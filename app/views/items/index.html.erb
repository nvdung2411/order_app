<section class="products">
  <li><%= link_to "Add Item", new_item_path %></li>
  <h1 class="title">latest dishes</h1>

   <div class="box-container">

    <% @items.each do |item| %>
      <div  class="box">
         <a href="<%= item_path(item) %>" class="fas fa-eye"></a>

          <%= image_tag item.item_img.url(:item_index) %>

         <div class="stars">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
          </div>
          <div class="name"><%= item.name %></div>
            <div class="flex">
            <div class="price"><%= item.price %>$</div>
            <%= form_with model: @order_item do |f| %>
              <%= f.hidden_field :item_id, value: item.id %>
              <%= f.number_field :quantity, class: 'qty', value: 1, min: 1%>
              <button class="fas fa-shopping-cart" type="submit" name="add_to_cart">
          </button>
            <% end %>
         </div>
      </div>
    <% end %>

   </div>
</section>

<%= render 'footer' %>
<%= will_paginate @items %>
