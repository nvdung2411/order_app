<!-- category -->
<section class="category">

   <h1 class="title">food category</h1>

   <div class="box-container">

      <a href="<%=  items_path(category:'food') %>" class="box">
         <%= image_tag("cat-1.png", alt: "") %>
         <h3>fast food</h3>
      </a>

      <a href="category.html" class="box">
         <%= image_tag("cat-2.png", alt: "") %>
         <h3>main dishes</h3>
      </a>

      <a href="<%=  items_path(category:'drinks')%> "class="box">
         <%= image_tag("cat-3.png", alt: "") %>
         <h3>drinks</h3>
      </a>

      <a href="category.html" class="box">
        <div class="image">
          <%= image_tag("cat-4.png", alt: "") %>
          </div>
         <h3>desserts</h3>
      </a>

   </div>

</section>

<section class="products">

   <h1 class="title">latest dishes</h1>

   <div class="box-container">
    <% @items.each do |item| %>
      <form accept="" method="post" class="box">
         <a href="<%= item_path(item) %>" class="fas fa-eye"></a>
         <button class="fas fa-shopping-cart" type="submit" name="add_to_cart">
          </button>
          <%= image_tag item.item_img.url(:item_index) %>

         <div class="stars">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
          </div>
          <div class="name"><%= item.name %></div>
         <div class="flex">
            <div class="price"><%= item.price %>.000Ä‘</div>
            <input type="number" name="qty" class="qty" min="1" max="99" value="1"
             onkeypress="if(this.value.length == 2) return false;">
         </div>
      </form>
    <% end %>

   </div>

   <div class="more-btn">
      <a href="<%= items_path %>" class="btn">veiw all</a>
   </div>

</section>

<%= render 'footer' %>
