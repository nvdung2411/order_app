<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css' %>
    <%= stylesheet_link_tag 'application', 'https://unpkg.com/swiper@8/swiper-bundle.min.css' %>
  </head>
  <body>
    <header class="header">
      <section class="flex">
        <a href="<%= home_path  %>" class="logo">Food & Drinks ðŸ˜‹</a>
        <nav class="navbar">
          <a href="<%= items_path %>">menu</a>
          <% if user_signed_in? && current_user.admin? %>
            <a href="<%= admin_manage_user_path %>">user</a>
            <a href="<%= admin_order_path  %>">orders</a>
          <% else %>
            <a href="<%= about_path %>">about</a>
            <a href="<%= list_order_path %>">orders</a>
          <% end %>
          <a href="#">contact</a>
          <% if user_signed_in? %>
            <a><%= link_to "logout", destroy_user_session_path, method: :delete %></a>
          <% else %>
            <a><%= link_to "login", new_user_session_path %></a>
          <% end %>
        </nav>
        <div class="icons">
          <a href="<%= search_path %>"><i class="fas fa-search"></i></a>
          <% unless user_signed_in? && current_user.admin? %>
            <a href="<%= cart_path %>">
              <i class="fas fa-shopping-cart"></i>
              <span >( <span class="my_cart m-0 b-0" ><%= item_in_cart.size %> </span>)</span>
            </a>
          <% end %>
          <a href="<%= profile_path %>"class="fas fa-user"></a>
        </div>
      </section>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <p class="alert ajax"><%= alert %></p>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
